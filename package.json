{
  "name": "mipd",
  "description": "TypeScript Utilities for EIP-6963",
  "version": "0.0.0",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "changeset": "changeset",
    "changeset:release": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm install --lockfile-only && pnpm bun scripts/updateVersion.ts",
    "format": "rome format . --write",
    "lint": "rome check .",
    "lint:fix": "pnpm lint --apply",
    "preinstall": "npx only-allow pnpm",
    "prepare": "npx simple-git-hooks",
    "prepublishOnly": "pnpm bun scripts/prepublishOnly.ts",
    "test": "vitest dev",
    "test:cov": "vitest dev --coverage",
    "typecheck": "tsc --noEmit && vitest typecheck"
  },
  "type": "module",
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "typings": "./types/index.d.ts",
  "sideEffects": false,
  "files": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.test-d.ts",
    "!src/_test/**/*"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./src/index.js"
    },
    "./window": {
      "types": "./types/window.d.ts",
      "default": "./src/window.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "window": [
        "./src/window.d.ts"
      ]
    }
  },
  "peerDependencies": {
    "typescript": ">=5.0.4"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.3.1",
    "@vitest/coverage-v8": "^0.32.2",
    "fs-extra": "^11.1.1",
    "jsdom": "^22.1.0",
    "rome": "~12.1.3",
    "simple-git-hooks": "^2.8.1",
    "typescript": "^5.0.4",
    "vitest": "^0.32.2"
  },
  "license": "MIT",
  "repository": "wagmi-dev/mipd",
  "authors": [
    "awkweb.eth",
    "jxom.eth"
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/wagmi-dev"
    }
  ],
  "keywords": [
    "eth",
    "ethereum",
    "dapps",
    "wallet",
    "web3"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  },
  "packageManager": "pnpm@8.3.1",
  "dependencies": {
    "viem": "^1.1.4"
  }
}
